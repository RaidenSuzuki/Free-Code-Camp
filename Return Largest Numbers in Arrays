function largestOfFour(arr) {
  // You can do this!
   var newArr = [];                                //New empty Array 
     for (var i = 0; i < arr.length; i++) {        //for loop iterate over array
      var maximum = -Infinity;                     //sets maximum
        for (var j = 0; j < arr[i].length; j++)    //for loop iterate over sub array
          if (arr[i][j] > maximum)                 //iterate and compare sub-arrays 
          maximum = arr[i][j];                     //set maxi to result of above 
            newArr.push(maximum);                  //push in to empty array
    }
  
  
  return newArr;
}

largestOfFour([[4, 5, 1, 3], [13, 27, 18, 26], [32, 35, 37, 39], [1000, 1001, 857, 1]]);
